{
  "name": "emoji-announcer",
  "version": "0.0.0",
  "description": "Announces changes to custom emoji in Slack.",
  "repository": "gitlab:wjharney/emoji-announcer",
  "license": "MIT",
  "author": "Will Harney <9564874-wjharney@users.noreply.gitlab.com>",
  "type": "module",
  "exports": "./dist/app.js",
  "scripts": {
    "build": "tsc",
    "check:package": "depcheck . && sort-package-json --check",
    "check:style": "eslint src",
    "check:ts": "yarn check:types && yarn check:style && depcheck .",
    "check:types": "tsc --noEmit",
    "fix:package": "sort-package-json",
    "fix:style": "yarn check:style --fix",
    "postinstall": "npm run build",
    "lint": "yarn check:style",
    "prepare": "husky install",
    "start": "node ./dist/app.js",
    "test": "mocha 'src/**/*.test.ts'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "package.json": "yarn run check:package",
    "*.ts": "yarn run check:ts"
  },
  "dependencies": {
    "@slack/bolt": "^3.10.0",
    "dotenv": "^16.0.0",
    "pg": "^8.7.3",
    "sequelize": "^6.17.0",
    "slack-bolt-sequelize": "^0.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.10.9",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "depcheck": "^1.4.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^12.4.0",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "sinon": "^13.0.2",
    "sinon-chai": "^3.7.0",
    "sort-package-json": "^1.55.0",
    "sqlite3": "^5.0.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}